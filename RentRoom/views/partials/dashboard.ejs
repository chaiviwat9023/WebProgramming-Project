<div class="container">
    <h3 class="mb-4">Dashboard</h3>
    <div class="row">
        <!-- ห้องว่าง -->
        <div class="col-md-4 mb-4">
            <div class="card text-white bg-success shadow-lg h-100">
                <div class="card-body text-center p-4">
                    <h5 class="card-title mb-3"><i class="fas fa-door-open fa-2x"></i></h5>
                    <h2 class="card-text mb-2"><%= emptyRooms %></h2>
                    <p class="card-text">ห้องที่พร้อมให้เช่า</p>
                </div>
            </div>
        </div>

        <!-- รออนุมัติ -->
        <div class="col-md-4 mb-4">
            <div class="card text-white bg-warning shadow-lg h-100">
                <div class="card-body text-center p-4">
                    <h5 class="card-title mb-3"><i class="fas fa-clock fa-2x"></i></h5>
                    <h2 class="card-text mb-2"><%= pendingReservations %></h2>
                    <p class="card-text">ผู้เช่าที่รอการอนุมัติ</p>
                </div>
            </div>
        </div>

        <!-- บิลที่รอยืนยัน -->
        <div class="col-md-4 mb-4">
            <div class="card text-white bg-danger shadow-lg h-100">
                <div class="card-body text-center p-4">
                    <h5 class="card-title mb-3"><i class="fas fa-file-invoice-dollar fa-2x"></i></h5>
                    <h2 class="card-text mb-2"><%= pendingBills %></h2>
                    <p class="card-text">รายการบิลที่ต้องตรวจสอบ</p>
                </div>
            </div>
        </div>
    </div>
</div>
