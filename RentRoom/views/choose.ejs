<%- include("partials/head") %>
<style>

  .card {
    width: 100%;
    max-width: 100%; 
  }

  .room-card:hover {
    box-shadow: 0px 0px 10px 10px rgba(26, 152, 255, 0.1);
  }

  .room-cards-container {
    display: flex; 
    flex-direction: column;
    gap: 20px; 
    width: 75%;
  }
  .modal-body {
      text-align: left;
    }

    .modal-title {
      margin-left: 10px;
    }
</style>

<body>
  <%- include("partials/nav") %>
  <div class="container" style="margin-top: 100px;">
    <div class="row mx-auto">
      <!-- Sidebar Filters (Left) -->
      <div class="col-md-3">
        <div class="card p-3">
          <h5 class="fw-bold">Filter</h5>
          <div class="form-check">
            <input class="form-check-input" type="checkbox" id="soloTravel">
            <label class="form-check-label" for="soloTravel">
              ไมโครเวฟ
            </label>
          </div>
          <div class="form-check">
            <input class="form-check-input" type="checkbox" id="couple">
            <label class="form-check-label" for="couple">
              เครื่องทำน้ำอุ่น
            </label>
          </div>
          <div class="form-check">
            <input class="form-check-input" type="checkbox" id="familyGroups">
            <label class="form-check-label" for="familyGroups">
              เครื่องปรับอากาศ
            </label>
          </div>
          <div class="form-check">
            <input class="form-check-input" type="checkbox" id="business">
            <label class="form-check-label" for="business">
              Smart TV
            </label>
          </div>
        </div>
      </div>
  
      <!-- Room Cards (Right) -->
      <div class="col-md-9">
        <div class="room-cards-container">
          <% let roomNumber = 101; %>
          <% for(let i = 0; i < 9; i++) { %>
            <div class="room-card card mb-3 w-100">
              <div class="row g-0 h-100">
                <div class="col-md-4 d-flex align-items-stretch">
                  <img src="/images/deluxe.jpg" class="img-fluid rounded-start" 
                       style="object-fit: cover;" alt="Room Image">
                </div>
                <div class="col-md-8 d-flex align-items-center">
                  <div class="card-body">
                    <h5 class="card-title">Room <%= roomNumber %></h5>
                    <p class="card-text">หมายเลขห้อง: <%= roomNumber %></p>
                    <p class="card-text"><small class="text-body-secondary">Last updated 3 mins ago</small></p>
                    <button class="btn btn-primary" data-bs-toggle="modal" 
                            data-bs-target="#confirmationModal<%= roomNumber %>">
                      Rent
                    </button>
                    <button class="btn btn-info" data-bs-toggle="modal" 
                            data-bs-target="#viewRoomModal<%= roomNumber %>">
                      View
                    </button>
                  </div>
                </div>
              </div>
            </div>
          
                            <!-- Modal สำหรับห้องแต่ละห้อง - View (รายละเอียดห้องเพิ่มเติม) -->
                            <div class="modal fade" id="viewRoomModal<%= roomNumber %>" tabindex="-1"
                              aria-labelledby="viewRoomModalLabel<%= roomNumber %>" aria-hidden="true">
                              <div class="modal-dialog modal-xl">
                                <div class="modal-content">
                                  <div class="modal-header">
                                    <h5 class="modal-title" id="viewRoomModalLabel<%= roomNumber %>">
                                      <i class="fas fa-door-open"></i> รายละเอียดห้อง <%= roomNumber %>
                                    </h5>
                                  </div>
                                  <div class="modal-body">
                                    <div class="container">
                                      <div class="row">
                                        <!-- รูปภาพห้อง -->
                                        <div class="col-md-6">
                                          <img src="/images/deluxe.jpg" class="img-fluid rounded" alt="Room <%= roomNumber %>">
                                        </div>
                                        <!-- ข้อมูลห้อง -->
                                        <div class="col-md-6">
                                          <h4><i class="fas fa-info-circle"></i> ข้อมูลห้อง
                                          </h4>
                                          <ul class="list-unstyled">
                                            <li><i class="fas fa-hashtag"></i> หมายเลขห้อง:
                                              <strong>
                                                <%= roomNumber %>
                                              </strong>
                                            </li>
                                            <li><i class="fas fa-expand"></i> ขนาดห้อง:
                                              <strong>28 ตร.ม.</strong>
                                            </li>
                                            <li><i class="fas fa-bed"></i> ประเภทห้อง:
                                              <strong>ห้องสตูดิโอ</strong>
                                            </li>
                                            <li><i class="fas fa-users"></i> รองรับ: <strong>2
                                                คน</strong></li>
                                            <li><i class="fas fa-building"></i> ชั้น:
                                              <strong>3</strong>
                                            </li>
                                            <li><i class="fas fa-couch"></i> เฟอร์นิเจอร์:
                                              <strong>มี</strong>
                                            </li>
                                          </ul>
          
                                          <h4><i class="fas fa-money-bill-wave"></i> ค่าใช้จ่าย
                                          </h4>
                                          <ul class="list-unstyled">
                                            <li><i class="fas fa-coins"></i> ค่าเช่า:
                                              <strong>6,500 บาท/เดือน</strong>
                                            </li>
                                            <li><i class="fas fa-hand-holding-usd"></i> มัดจำ:
                                              <strong>13,000 บาท (2 เดือน)</strong>
                                            </li>
                                            <li><i class="fas fa-bolt"></i> ค่าไฟ: <strong>8
                                                บาท/หน่วย</strong></li>
                                            <li><i class="fas fa-tint"></i> ค่าน้ำ: <strong>20
                                                บาท/หน่วย</strong></li>
                                            <li><i class="fas fa-wifi"></i> ค่าอินเทอร์เน็ต:
                                              <strong>ฟรี</strong>
                                            </li>
                                          </ul>
                                        </div>
                                      </div>
          
                                      <hr>
          
                                      <!-- สิ่งอำนวยความสะดวก -->
                                      <h4><i class="fas fa-concierge-bell"></i> สิ่งอำนวยความสะดวก
                                      </h4>
                                      <div class="row">
                                        <div class="col-md-4">
                                          <p><i class="fas fa-tv"></i> Smart TV 42 นิ้ว</p>
                                          <p><i class="fas fa-wind"></i> เครื่องปรับอากาศ</p>
                                          <p><i class="fas fa-blender"></i> ไมโครเวฟ</p>
                                        </div>
                                        <div class="col-md-4">
                                          <p><i class="fas fa-bed"></i> เตียงนอน 5 ฟุต</p>
                                          <p><i class="fas fa-shower"></i> เครื่องทำน้ำอุ่น</p>
                                          <p><i class="fas fa-refrigerator"></i> ตู้เย็น 7.5 คิว
                                          </p>
                                        </div>
                                        <div class="col-md-4">
                                          <p><i class="fas fa-parking"></i> ที่จอดรถ</p>
                                          <p><i class="fas fa-shield-alt"></i> ระบบคีย์การ์ด</p>
                                          <p><i class="fas fa-cctv"></i> กล้องวงจรปิด 24 ชม.</p>
                                        </div>
                                      </div>
          
                                    </div>
                                  </div>
                                  <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                      <i class="fas fa-times"></i> ปิด
                                    </button>
                                  </div>
                                </div>
                              </div>
                            </div>

          <% roomNumber++; %> <!-- เพิ่มหมายเลขห้องขึ้นไปเรื่อยๆ -->
        <% } %>
    </div>
  </div>

  <!-- Script ของ Bootstrap -->
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"></script>
</body>
<%- include("partials/script") %>