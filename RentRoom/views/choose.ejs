<%- include("partials/head") %>
<style>
  /* ขยายความกว้างให้การ์ดเต็มหน้าจอ */
  .card {
    width: 100%; /* ให้การ์ดขยายเต็มความกว้าง */
    max-width: 100%; /* ป้องกันการ์ดเกินความกว้าง */
  }

  .room-cards-container {
    display: flex; /* ใช้ Flexbox เพื่อจัดเรียงการ์ด */
    flex-direction: column; /* การ์ดจะเรียงใน 1 คอลัมน์ */
    gap: 20px; /* ระยะห่างระหว่างการ์ด */
    width: 100%;
  }
</style>

<body>
  <%- include("partials/nav") %>
  <div class="container text-center" style="margin-top: 100px;">
    <div class="room-cards-container">
        <% let roomNumber = 101; %> <!-- เริ่มต้นที่ 101 -->
        <% for(let i = 0; i < 3; i++) { %> <!-- สร้าง 3 ห้อง -->
          <div class="card mb-3 w-100" style="max-width: 100%;">
            <div class="row g-0">
              <div class="col-md-4">
                <img src="/images/deluxe.jpg" class="img-fluid rounded-start" alt="...">
              </div>
              <div class="col-md-8">
                <div class="card-body">
                  <h5 class="card-title">Room</h5>
                  <p class="card-text"><%= roomNumber %></p>
                  <p class="card-text"><small class="text-body-secondary">Last updated 3 mins ago</small></p>
                </div>
              </div>
            </div>
          </div>

          <% roomNumber++; %> <!-- เพิ่มหมายเลขห้องขึ้นไปเรื่อยๆ -->
        <% } %>
    </div>
  </div>

  <!-- Script ของ Bootstrap -->
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"></script>
</body>
<%- include("partials/script") %>