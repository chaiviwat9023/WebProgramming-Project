<%- include("partials/head") %>
<style>
    body {
        background-color: #F8F9FA;
    }
    .booking-container {
        max-width: 600px;
        margin: 50px auto;
        background: white;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    }
    .btn-primary {
        background-color: #0d6efd;
        border: none;
    }
    .btn-primary:hover {
        background-color: #004080;
    }
</style>
<body>
    <%- include("partials/nav") %>
    <div class="container">
        <div class="booking-container">
            <h2 class="text-center mb-4 text-primary">Hotel Booking Form</h2>
            <form id="bookingForm">
                <!-- Information -->
                <div class="mb-3">
                    <label class="form-label">ชื่อ</label>
                    <input type="text" class="form-control" id="firstName" placeholder="กรุณาใส่ชื่อจริง" required>
                </div>
                <div class="mb-3">
                    <label class="form-label">นามสกุล</label>
                    <input type="text" class="form-control" id="lastName" placeholder="กรุณาใส่นามสกุล" required>
                </div>
                <div class="mb-3">
                    <label class="form-label">อีเมล</label>
                    <input type="email" class="form-control" id="email" placeholder="กรุณาใส่อีเมล" required>
                </div>
                <div class="mb-3">
                    <label class="form-label">หมายเลขโทรศัพท์</label>
                    <input type="tel" class="form-control" id="phone" placeholder="กรุณาใส่หมายเลขโทรศัพท์" required>
                </div>

                <!-- Booking Details -->
                <div class="mb-3">
                    <label class="form-label">จองวันที่</label>
                    <input type="date" class="form-control" id="bookingDate" required>
                </div>
                <!-- Submit Button -->
                <button type="submit" class="btn btn-primary w-100" id="submitBooking">Confirm Booking</button>
            </form>
        </div>
    </div>
    <!-- Custom Modal แจ้งเตือน -->
    <div id="customAlert" style="display: none; position: fixed; top: 20px; left: 50%; transform: translateX(-50%); background-color: rgba(0,0,0,0.7); padding: 20px; border-radius: 10px; color: white; z-index: 9999; width: auto;">
        <div style="margin-bottom: 10px;">
            <strong>ข้อมูลไม่ครบถ้วน!</strong> กรุณากรอกข้อมูลให้ครบถ้วน
        </div>
        <!-- ปุ่ม X -->
        <button id="closeAlertButton" style="position: absolute; top: 5px; right: 5px; background: transparent; color: white; border: none; font-size: 24px; cursor: pointer;">
            &times;
        </button>
    </div>
    <!-- JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const bookingForm = document.getElementById("bookingForm");

            bookingForm.addEventListener("submit", function (event) {
                event.preventDefault(); // ป้องกันการรีเฟรชหน้า

                // ดึงค่าจาก input fields
                const firstName = document.getElementById("firstName").value;
                const lastName = document.getElementById("lastName").value;
                const email = document.getElementById("email").value;
                const phone = document.getElementById("phone").value;
                const bookingDate = document.getElementById("bookingDate").value;

                if (firstName === "" || lastName === "" || email === "" || phone === "" || bookingDate === "") {
                    showCustomAlert();
                    return;
                }

                // alert("จองโรงแรมสำเร็จ!\n\nชื่อ: " + firstName + " " + lastName + "\nอีเมล: " + email + "\nโทรศัพท์: " + phone + "\nวันที่จอง: " + bookingDate);
            });
            
            // แสดง Custom Alert
            function showCustomAlert() {
                document.getElementById("customAlert").style.display = "block";
            }

            // ปิด Custom Alert เมื่อกดปุ่ม "X"
            document.getElementById("closeAlertButton").addEventListener("click", function () {
                document.getElementById("customAlert").style.display = "none";
            });
        });
    </script>

</body>
</html>
<%- include("partials/script") %>
