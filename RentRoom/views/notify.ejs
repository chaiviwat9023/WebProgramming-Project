<%- include("partials/head") %>
<style>
    body {
        background-color: #f8f9fa;
    }
    .notification-card {
        transition: 0.3s;
        cursor: pointer;
    }
    .notification-card:hover {
        background-color: #e9ecef;
    }
    .unread {
        font-weight: bold;
        background-color: #d1ecf1;
    }
    .time {
        font-size: 0.85rem;
        color: gray;
    }
    .action-buttons {
        display: flex;
        gap: 10px;
    }
</style>

<body>
    <%- include("partials/nav") %>
    <div class="container">
        <h2 class="text-center mb-4">üîî ‡∏Å‡∏≤‡∏£‡πÅ‡∏à‡πâ‡∏á‡πÄ‡∏ï‡∏∑‡∏≠‡∏ô</h2>
        <div class="list-group bg-light p-3 rounded shadow">
            <% if (notifications && notifications.length > 0) { %>
                <% notifications.forEach(notification => { %>
                    <div class="list-group-item list-group-item-action notification-card <%= notification.status === 'unread' ? 'unread' : '' %> d-flex justify-content-between align-items-center">
                        <div>
                            <i class="fas <%= notification.status === 'unread' ? 'fa-exclamation-circle text-warning' : 'fa-info-circle text-primary' %>"></i>
                            <strong><%= notification.message %></strong>
                            <div class="time"><%= new Date(notification.created_at).toLocaleString() %></div>
                        </div>
                        <% if (notification.status === 'unread') { %>
                            <div class="action-buttons">
                                <button class="btn btn-sm btn-success mark-as-read" data-id="<%= notification.notification_id %>">‚úîÔ∏è ‡∏≠‡πà‡∏≤‡∏ô‡πÅ‡∏•‡πâ‡∏ß</button>
                            </div>
                        <% } %>
                    </div>
                <% }) %>
            <% } else { %>
                <div class="text-center">‡πÑ‡∏°‡πà‡∏°‡∏µ‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏Å‡∏≤‡∏£‡πÅ‡∏à‡πâ‡∏á‡πÄ‡∏ï‡∏∑‡∏≠‡∏ô</div>
            <% } %>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡∏ó‡∏≥‡πÄ‡∏Ñ‡∏£‡∏∑‡πà‡∏≠‡∏á‡∏´‡∏°‡∏≤‡∏¢‡∏ß‡πà‡∏≤‡∏≠‡πà‡∏≤‡∏ô‡πÅ‡∏•‡πâ‡∏ß
        document.querySelectorAll(".mark-as-read").forEach(button => {
            button.addEventListener("click", function () {
                const notificationId = this.getAttribute("data-id");
    
                // ‡∏™‡πà‡∏á request ‡πÑ‡∏õ‡∏¢‡∏±‡∏á‡πÄ‡∏ã‡∏¥‡∏£‡πå‡∏ü‡πÄ‡∏ß‡∏≠‡∏£‡πå
                fetch(`/notify/${notificationId}`, {
                    method: "POST",
                    headers: {
                        "Content-Type": "application/json",
                    },
                })
                .then(response => {
                    if (!response.ok) {
                        throw new Error("Network response was not ok");
                    }
                    return response.json();
                })
                .then(data => {
                    if (data.success) {
                        let notification = this.closest(".notification-card");
                        notification.classList.remove("unread"); // ‡πÄ‡∏≠‡∏≤ class unread ‡∏≠‡∏≠‡∏Å
                        this.style.display = "none"; // ‡∏ã‡πà‡∏≠‡∏ô‡∏õ‡∏∏‡πà‡∏° "‡∏≠‡πà‡∏≤‡∏ô‡πÅ‡∏•‡πâ‡∏ß"
                    }
                })
                .catch(error => console.error("Error:", error));
            });
        });
    </script>
</body>